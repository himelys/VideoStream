<SettingScreen>:
    name: "Setting"
    FloatLayout:
        size: root.size
        pos: root.pos
        canvas:
            Color:
                rgb: (0, 0, 0)
            Rectangle:
                pos: root.pos
                size: root.size
	    RecSetting

<RecSetting>:
	# fps: fps_slider.value
    BoxLayout:
		orientation: 'horizontal'
        size_hint: 1, None
        width: root.size[0]
        height: root.size[1]
		Label:
            color: 1, 1, 1, 1
            font_size: 20
            text: 'FPS: ' + str(fps_slider.value)
            # size: self.texture_size
		Slider:
			id: fps_slider
			min: 1
			max: 60
			step: 1
			value: 30
			on_value:
				# root.Set_FPS(self.value)
				app.Cam_fps = self.value
				# root.ids.lbl1.text = 'SharedVar is ' + str(app.Cam_fps)
        Button:
            text: 'To Preview'
            size_hint: None, 0.2
            width: root.size[0]/5
			on_release:
				app.root.current = "main"
